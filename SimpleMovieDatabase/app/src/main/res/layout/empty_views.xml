<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/image_view_logo"
        android:layout_width="@dimen/empty_views_image_view_logo_area"
        android:layout_height="@dimen/empty_views_image_view_logo_area"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/empty_views_image_view_logo_margin"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_logo"/>

    <Button
        android:id="@+id/button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/empty_views_button_search_margin"
        android:background="@drawable/background_button_search"
        android:fontFamily="@string/font_family"
        android:paddingLeft="@dimen/empty_views_button_search_padding"
        android:paddingRight="@dimen/empty_views_button_search_padding"
        android:textColor="@color/button_search_color"
        android:text="@string/empty_views_button_search"
        android:textAllCaps="false"
        android:textSize="@dimen/empty_views_button_search_text_size"/>

</RelativeLayout>