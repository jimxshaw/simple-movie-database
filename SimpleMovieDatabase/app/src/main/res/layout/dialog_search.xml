<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialog_search_text_view_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="36dp"
            android:text="Database Search"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/dialog_search_button_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/dialog_search_text_view_search"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/dialog_search_text_view_search"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_clear"/>

        <EditText
            android:id="@+id/dialog_search_edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_search_text_view_search"
            android:layout_marginBottom="36dp"
            android:hint="Title (required)"
            android:padding="16dp"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/dialog_search_edit_text_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_search_edit_text_title"
            android:layout_marginBottom="36dp"
            android:hint="Year (optional)"
            android:padding="16dp"/>

        <Spinner
            android:id="@+id/dialog_search_spinner_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dialog_search_edit_text_year"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/dialog_search_edit_text_year"/>

        <Button
            android:id="@+id/dialog_search_button_submit_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_below="@id/dialog_search_edit_text_year"
            android:text="Submit"
            android:textAllCaps="false"/>

    </RelativeLayout>

</ScrollView>

