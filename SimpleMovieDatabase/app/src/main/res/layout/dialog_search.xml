<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_search_text_view_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dialog_search_text_view_margin"
            android:layout_marginTop="@dimen/dialog_search_text_view_margin"
            android:text="@string/dialog_search_text_view_search"
            android:textSize="@dimen/dialog_search_text_view_search_text_size"/>

        <ImageButton
            android:id="@+id/dialog_search_button_close"
            android:layout_width="@dimen/dialog_search_image_button_close_area"
            android:layout_height="@dimen/dialog_search_image_button_close_area"
            android:layout_alignBottom="@id/dialog_search_text_view_search"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/dialog_search_text_view_search"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_clear"/>

        <EditText
            android:id="@+id/dialog_search_edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_search_text_view_search"
            android:layout_marginBottom="@dimen/dialog_search_text_view_margin"
            android:hint="@string/dialog_search_edit_text_title_hint"
            android:padding="@dimen/dialog_search_edit_text_title_padding"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/dialog_search_edit_text_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_search_edit_text_title"
            android:layout_marginBottom="@dimen/dialog_search_edit_text_year_margin"
            android:hint="@string/dialog_search_edit_text_year_hint"
            android:inputType="number"
            android:maxLength="4"
            android:padding="@dimen/dialog_search_edit_text_year_padding"/>

        <Spinner
            android:id="@+id/dialog_search_spinner_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dialog_search_edit_text_year"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/dialog_search_edit_text_year"/>

        <Button
            android:id="@+id/dialog_search_button_submit_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_search_edit_text_year"
            android:layout_marginTop="@dimen/dialog_search_button_submit_margin"
            android:text="@string/dialog_search_button_submit_text"
            android:textAllCaps="false"/>

    </RelativeLayout>

</ScrollView>

